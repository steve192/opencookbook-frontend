{
  "expo": {
    "name": "CookPal",
    "slug": "opencookbook",
    "scheme": "cookpal",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "androidStatusBar": {
      // "backgroundColor": "#C2185B",
      "translucent": true
    },
    "splash": {
      "image": "./assets/login-screen.png",
      "resizeMode": "cover",
      "backgroundColor": "#295700"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "checkAutomatically": "ON_ERROR_RECOVERY",
      "url": "https://expo.dev/@steve192/opencookbook"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "buildNumber": "0.0.1",
      "bundleIdentifier": "com.sterul.opencookbook"
    },
    "android": {
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "beta.cookpal.io",
              "pathPrefix": "/"
            },
            {
              "scheme": "https",
              "host": "*.cookpal.io",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#295700"
      },
      "package": "com.sterul.opencookbook",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "versionCode": 14
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you upload them to your recipes."
        }
      ]
    ]
  }
}
